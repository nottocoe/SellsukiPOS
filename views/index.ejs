    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
    integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
    crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
    integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
    crossorigin="anonymous"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
    integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
    crossorigin="anonymous"></script>
  <script async="" src="//www.google-analytics.com/analytics.js"></script>
  <script src="./javascripts/modernizr.js"></script>
  <title>
    <%= title %>
  </title>
  <link href='https://fonts.googleapis.com/css?family=Kanit' rel='stylesheet'>
  <style>
    body {
      font-family: 'Kanit';
      font-size: 22px;
    }

    h5 {
      text-align: center;
    }

    h3 {
      color: aliceblue;
    }

    button {
      margin-top: 5%;
      margin-bottom: 5%;
    }
  </style>
</head>

<body class>

  <header>
    <div id="logo">
      <h3>Shiba Book Shop</h3>
    </div>
    <div id="cd-cart-trigger">
      <a class="cd-img-replace" href="#0">Cart</a>
    </div>
  </header>

  <main>
    <div class="container">
      <div class="row">
        <% for(var i=0; i < data.books.length; i++){ %>
          <div class="col-sm-6 col-md-4 col-lg-3 mt-4">
            <div class="card">
              <img class="card-img-top" src="<%= data.books[i].cover; %>" width="200" height="370">
              <div class="card-block">
                <h5 class="text-bold">
                  <%= data.books[i].title; %>
                </h5>
                <center><button type="button" class="btn btn-primary"
                    onclick='addtoCart( "<%= data.books[i].price %>","<%= data.books[i].title %>","<%= data.books[i].id %>" )'>Add
                    to Cart</button>
              </div>
            </div>
          </div>
          <% } %>
      </div>
    </div>
    <br><br><br><br><br><br><br><br><br><br><br><br>
  </main>

  <div id="cd-shadow-layer" class=""></div>

  <div id="cd-cart" class="">
    <h2>Cart</h2>
    <ul id="myList" class="cd-cart-items"></ul>
    <div id="total-price" class="cd-cart-total">
      <p>Discount <span id="sum-discount"> 0 </span></p>
      <p>Net <span id="sum-price"> 0 </span></p>
    </div>
    <a href="#checkout" class="checkout-btn" onclick="checkout()">Checkout</a>
  </div>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
  <script src="./javascripts/main.js"></script>
  <script>
    (function (i, s, o, g, r, a, m) {
      i['GoogleAnalyticsObject'] = r;
      i[r] = i[r] || function () {
        (i[r].q = i[r].q || []).push(arguments)
      }, i[r].l = 1 * new Date();
      a = s.createElement(o),
        m = s.getElementsByTagName(o)[0];
      a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
    }
    )(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');
    ga('create', 'UA-48014931-1', 'codyhouse.co');
    ga('set', 'anonymizeIp', true);
    ga('send', 'pageview');
  </script>

  <script type="text/javascript">
    var cart = [];
    function addtoCart(price, title, id) {
      var isContain = false;
      var sum = 0;
      $("#myList").empty();

      cart.forEach(item => {
        if (item.id === id) {
          isContain = true;
          item.amount++;
        }
      });

      if (!isContain) {
        cart.push({ title: title, id: id, price: price, amount: 1 });
      }

      cart.forEach(item => {
        $('#myList').append('<li id="all-cart-' + item.id + '">' + item.title + '<span id="amount" class="amount"> x<span id="book_amount" class="book_amount">' + item.amount + '</span></span></div><div id="cd-price" class="cd-price">' + item.price + ' <span>Baht</span></div><a class="cd-item-remove cd-img-replace" onclick="removeCart(' + item.id + ')">Remove</a></li>');
      });

      cart.forEach(item => {
        sum += item.price * item.amount;
      });

      var book_discount = discount();
      $('#sum-discount').text(book_discount);
      var net = sum - book_discount;
      $('#sum-price').text(net);
    }

    function removeCart(id) {
      $('#all-cart-' + id).remove();
      var removeIndex;
      var sum = 0;

      cart.forEach((item, index) => {
        if (id == item.id) {
          removeIndex = index;
          console.log(removeIndex);
        }
      });
      cart.splice(removeIndex, 1);
      console.log(cart);

      cart.forEach(item => {
        sum += item.price * item.amount;
      });

      var book_discount = discount();
      $('#sum-discount').text(book_discount);
      var net = sum - book_discount;
      $('#sum-price').text(net);
    }

    function discount() {
      var discount = 0;
      cart.forEach(item => {
        if (item.amount >= 2) {
          switch (item.amount) {
            case 2: discount += (item.price * item.amount) * 0.10; break;
            case 3: discount += (item.price * item.amount) * 0.11; break;
            case 4: discount += (item.price * item.amount) * 0.12; break;
            case 5: discount += (item.price * item.amount) * 0.13; break;
            case 6: discount += (item.price * item.amount) * 0.14; break;
            default: discount += (item.price * item.amount) * 0.15; break;
          }
        }
      });
      return discount;
    }

    async function checkout() {
      var sum = 0;
      const cash = await Swal.fire({
        title: 'Enter Customer Cash',
        input: 'number',
        showCancelButton: true,
        inputValidator: (value) => {
          if (!value) {
            return 'Please enter cash amount to pay!'
          }
        }
      });

      cart.forEach(item => {
        sum += item.price * item.amount;
      });

      var book_discount = discount();
      var net = parseInt(sum) - parseInt(book_discount);
      if (cash.value < net) {
        Swal.fire({
          icon: 'error',
          title: 'Payment Failed',
          text: 'Your cash is less than net price!'
        })
      }
      else {
        var change = parseInt(cash.value) - net;
        Swal.fire({
          icon: 'success',
          title: 'Payment Success',
          text: 'Change back is ' + change + ' Baht'
        }).then(function (result) {
          if (true) {
            window.location = "";
          }
        })
      }
    }
  </script>
</body>

</html>